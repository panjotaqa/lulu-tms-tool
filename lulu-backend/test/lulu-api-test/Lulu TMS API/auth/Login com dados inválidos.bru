meta {
  name: Login com dados inválidos
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/auth/login
  body: json
  auth: inherit
}

body:json {
  {
    "email": "email.inexistente@example.com",
    "password": "senhaErrada123"
  }
}

vars:pre-request {
  baseUrl: http://localhost:3000
}

tests {
  test("deve retornar erro ao tentar login com dados inválidos", () => {
    expect(res.getStatus()).to.equal(401);
    const responseBody = res.getBody();
    expect(responseBody).to.be.an('object');
    expect(responseBody).to.have.property('message');
    expect(responseBody.message).to.equal('Credenciais inválidas');
  });
}

example {
  name: 401 Response
  description: Credenciais inválidas
  
  request: {
    url: {{baseUrl}}/auth/login
    method: POST
    mode: json
    body:json: {
      {
        "email": "email.inexistente@example.com",
        "password": "senhaErrada123"
      }
    }
  }
  
  response: {
    status: {
      code: 401
      text: Unauthorized
    }
  
    body: {
      type: json
      content: '''
        {
          "statusCode": 401,
          "message": "Credenciais inválidas",
          "error": "Unauthorized"
        }
      '''
    }
  }
}

