example {
  name: 401 Response
  description: Não autorizado - Token inválido ou ausente
  
  request: {
    url: {{baseUrl}}/auth/logout
    method: POST
    mode: none
  }
  
  response: {
    status: {
      code: 401
      text: Unauthorized
    }
  
    body: {
      type: json
      content: '''
        {
          "statusCode": 401,
          "message": "Unauthorized"
        }
      '''
    }
  }
}
