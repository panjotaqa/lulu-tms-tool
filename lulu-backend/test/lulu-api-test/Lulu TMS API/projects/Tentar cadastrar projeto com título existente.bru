meta {
  name: Tentar cadastrar projeto com título existente
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/projects
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "title": "{{existingTitle}}",
    "slug": "projeto-teste-duplicado-{{$timestamp}}",
    "description": "Descrição do projeto duplicado"
  }
}

vars:pre-request {
  baseUrl: http://localhost:3000
  testEmail: test.project.duplicate@example.com
  testPassword: senhaSegura123
  existingTitle: Projeto Existente
}

script:pre-request {
  const email = bru.getVar("testEmail");
  const password = bru.getVar("testPassword");
  try {
    const createUserResponse = await bru.post("{{baseUrl}}/users", {
      body: {
        name: "Usuário Teste Duplicado",
        email: email,
        password: password
      },
      options: {
        headers: {
          "Content-Type": "application/json"
        }
      }
    });
    if (createUserResponse.status === 201 || createUserResponse.status === 409) {
      const loginResponse = await bru.post("{{baseUrl}}/auth/login", {
        body: {
          email: email,
          password: password
        },
        options: {
          headers: {
            "Content-Type": "application/json"
          }
        }
      });
      if (loginResponse.status === 200) {
        const loginBody = loginResponse.body;
        bru.setVar("token", loginBody.token);
        const createProjectResponse = await bru.post("{{baseUrl}}/projects", {
          body: {
            title: bru.getVar("existingTitle"),
            slug: "projeto-existente-" + Date.now(),
            description: "Projeto existente"
          },
          options: {
            headers: {
              "Content-Type": "application/json",
              "Authorization": "Bearer " + loginBody.token
            }
          }
        });
      }
    }
  } catch (err) {
    console.error("Erro no pré-script:", err);
  }
}

tests {
  test("deve retornar erro ao tentar cadastrar projeto com título existente", () => {
    expect(res.getStatus()).to.equal(409);
    const responseBody = res.getBody();
    expect(responseBody).to.be.an('object');
    expect(responseBody).to.have.property('message');
    expect(responseBody.message).to.include('título');
  });
}

