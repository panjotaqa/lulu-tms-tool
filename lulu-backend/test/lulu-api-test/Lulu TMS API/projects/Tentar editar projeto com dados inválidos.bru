meta {
  name: Tentar editar projeto com dados inválidos
  type: http
  seq: 8
}

patch {
  url: {{baseUrl}}/projects/{{projectId}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "slug": "slug inválido com espaços e MAIÚSCULAS"
  }
}

vars:pre-request {
  baseUrl: http://localhost:3000
  testEmail: test.project.edit.invalid@example.com
  testPassword: senhaSegura123
}

script:pre-request {
  const email = bru.getVar("testEmail");
  const password = bru.getVar("testPassword");
  try {
    const createUserResponse = await bru.post("{{baseUrl}}/users", {
      body: {
        name: "Usuário Teste Edit Invalid",
        email: email,
        password: password
      },
      options: {
        headers: {
          "Content-Type": "application/json"
        }
      }
    });
    if (createUserResponse.status === 201 || createUserResponse.status === 409) {
      const loginResponse = await bru.post("{{baseUrl}}/auth/login", {
        body: {
          email: email,
          password: password
        },
        options: {
          headers: {
            "Content-Type": "application/json"
          }
        }
      });
      if (loginResponse.status === 200) {
        const loginBody = loginResponse.body;
        bru.setVar("token", loginBody.token);
        const createProjectResponse = await bru.post("{{baseUrl}}/projects", {
          body: {
            title: "Projeto para Editar Inválido",
            slug: "projeto-para-editar-invalido-" + Date.now(),
            description: "Projeto original"
          },
          options: {
            headers: {
              "Content-Type": "application/json",
              "Authorization": "Bearer " + loginBody.token
            }
          }
        });
        if (createProjectResponse.status === 201) {
          bru.setVar("projectId", createProjectResponse.body.id);
        }
      }
    }
  } catch (err) {
    console.error("Erro no pré-script:", err);
  }
}

tests {
  test("deve retornar erro ao tentar editar projeto com dados inválidos", () => {
    expect(res.getStatus()).to.equal(400);
    const responseBody = res.getBody();
    expect(responseBody).to.be.an('object');
    expect(responseBody).to.have.property('message');
  });
}

