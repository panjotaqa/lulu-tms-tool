meta {
  name: Tentar editar projeto com slug existente
  type: http
  seq: 7
}

patch {
  url: {{baseUrl}}/projects/{{projectId}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "slug": "{{existingSlug}}"
  }
}

vars:pre-request {
  baseUrl: http://localhost:3000
  testEmail: test.project.edit.slug@example.com
  testPassword: senhaSegura123
  existingSlug: slug-existente-para-edicao
}

script:pre-request {
  const email = bru.getVar("testEmail");
  const password = bru.getVar("testPassword");
  try {
    const createUserResponse = await bru.post("{{baseUrl}}/users", {
      body: {
        name: "Usuário Teste Edit Slug",
        email: email,
        password: password
      },
      options: {
        headers: {
          "Content-Type": "application/json"
        }
      }
    });
    if (createUserResponse.status === 201 || createUserResponse.status === 409) {
      const loginResponse = await bru.post("{{baseUrl}}/auth/login", {
        body: {
          email: email,
          password: password
        },
        options: {
          headers: {
            "Content-Type": "application/json"
          }
        }
      });
      if (loginResponse.status === 200) {
        const loginBody = loginResponse.body;
        bru.setVar("token", loginBody.token);
        const createProject1Response = await bru.post("{{baseUrl}}/projects", {
          body: {
            title: "Projeto Slug Existente",
            slug: bru.getVar("existingSlug"),
            description: "Projeto com slug existente"
          },
          options: {
            headers: {
              "Content-Type": "application/json",
              "Authorization": "Bearer " + loginBody.token
            }
          }
        });
        const createProject2Response = await bru.post("{{baseUrl}}/projects", {
          body: {
            title: "Projeto para Editar Slug",
            slug: "projeto-para-editar-slug-" + Date.now(),
            description: "Projeto original"
          },
          options: {
            headers: {
              "Content-Type": "application/json",
              "Authorization": "Bearer " + loginBody.token
            }
          }
        });
        if (createProject2Response.status === 201) {
          bru.setVar("projectId", createProject2Response.body.id);
        }
      }
    }
  } catch (err) {
    console.error("Erro no pré-script:", err);
  }
}

tests {
  test("deve retornar erro ao tentar editar projeto com slug existente", () => {
    expect(res.getStatus()).to.equal(409);
    const responseBody = res.getBody();
    expect(responseBody).to.be.an('object');
    expect(responseBody).to.have.property('message');
    expect(responseBody.message).to.include('slug');
  });
}

