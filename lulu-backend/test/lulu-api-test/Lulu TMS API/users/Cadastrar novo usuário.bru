meta {
  name: Cadastrar novo usuário
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/users
  body: json
  auth: inherit
}

body:json {
  {
    "name": "{{$randomFullName}}",
    "email": "{{$randomEmail}}",
    "password": "{{$randomPassword}}"
  }
}

vars:pre-request {
  baseUrl: http://localhost:3000
}

tests {
  test("deve criar um usuário com dados válidos", () => {
    expect(res.getStatus()).to.equal(201);
    const responseBody = res.getBody();
    expect(responseBody).to.be.an('object');
    expect(responseBody).to.have.property('id');
    expect(responseBody.id).to.be.a('string');
    expect(responseBody).to.have.property('name');
    expect(responseBody.name).to.be.a('string');
    expect(responseBody.name.length).to.be.greaterThan(0);
    expect(responseBody).to.have.property('email');
    expect(responseBody.email).to.be.a('string');
    expect(responseBody.email).to.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/);
    expect(responseBody).to.not.have.property('password');
    expect(responseBody).to.have.property('createdAt');
    expect(responseBody).to.have.property('updatedAt');
  });
}

example {
  name: 201 Response
  description: Usuário criado com sucesso
  
  request: {
    url: {{baseUrl}}/users
    method: POST
    mode: json
    body:json: {
      {
        "name": "{{$randomFullName}}",
        "email": "{{$randomEmail}}",
        "password": "{{$randomPassword}}"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: 201
      text: Created
    }
  
    body: {
      type: json
      content: '''
        {
          "id": "123e4567-e89b-12d3-a456-426614174000",
          "name": "{{$randomFullName}}",
          "email": "{{$randomEmail}}",
          "createdAt": "2024-01-01T00:00:00.000Z",
          "updatedAt": "2024-01-01T00:00:00.000Z"
        }
      '''
    }
  }
}

