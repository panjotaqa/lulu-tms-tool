post {
  url: {{baseUrl}}/users
  body: json
  auth: inherit
}

body:json {
  {
    "name": "João Silva",
    "email": "joao.silva@example.com",
    "password": "senhaSegura123"
  }
}

vars:pre-request {
  baseUrl: http://localhost:3000
}

tests {
  test("deve retornar 409 quando email já está em uso", () => {
    expect(res.getStatus()).to.equal(409);
  });
}

docs {
